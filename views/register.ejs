<% include ./partials/header %>

<div class="container bg-light py-3" style="width: 40%;">
  <form action="/register" method="POST">
    <div class="form-group">
      <label for="new-username">Your name</label>
      <input class="form-control mb-1" id="new-username" type="text" name="username" placeholder="username">
    </div>
    <div class="form-group">
      <label for="new-password">Password</label>
      <input class="form-control mb-1" id="new-password" type="password" name="password" placeholder="password">
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </form>
</div>

<% include ./partials/footer %>
